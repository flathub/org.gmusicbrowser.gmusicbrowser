{
    "name": "perl-libs",
    "modules": [
        {
            "name": "perl",
            "no-autogen": true,
            "config-opts": [
                "-des",
                "-Duseshrplib"
            ],
            "build-options": {
                "cflags": "-fPIC",
                "ldflags": "-fpic"
            },
            "post-install": [
                "find ${FLATPAK_DEST}/lib/perl5/ -name \\*.so -exec chmod u+w {} \\;"
            ],
            "cleanup": [
                "/man",
                "*.pod",
                "*.h"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://cpan.metacpan.org/src/5.0/perl-5.34.0.tar.gz",
                    "sha256": "551efc818b968b05216024fb0b727ef2ad4c100f8cb6b43fab615fa78ae5be9a"
                },
                {
                    "type": "script",
                    "dest-filename": "configure",
                    "commands": [
                        "exec ./configure.gnu $@"
                    ]
                }
            ]
        },
